<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity">



    <TextView
        android:id="@+id/tv_sign_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sign_in"
        android:textAllCaps="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/margin_basex4"
        android:textSize="@dimen/text_large"
        />
    <TextView
        android:layout_marginTop="@dimen/margin_basex4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/username"
        android:id="@+id/tv_user_name"
        android:layout_marginVertical="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/et_username"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"


        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_username"
        android:hint="name@gmail.com"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
       app:layout_constraintLeft_toRightOf="@+id/tv_user_name"
        android:layout_marginVertical="40dp"
        android:layout_marginHorizontal="100dp"
        app:layout_constraintTop_toTopOf="parent"

        />
    <TextView
        android:layout_marginTop="@dimen/margin_basex4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/password"
        android:id="@+id/tv_pw"
        android:layout_marginVertical="50dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toTopOf="@+id/et_username"
        app:layout_constraintRight_toLeftOf="@+id/et_username"
        app:layout_constraintLeft_toLeftOf="parent"



        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_pw"
        android:hint="*********"

        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintLeft_toRightOf="@+id/tv_user_name"
        android:layout_marginVertical="35dp"
        android:layout_marginHorizontal="100dp"
        app:layout_constraintTop_toTopOf="@+id/et_username"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:text="@string/sign_in"
        android:id="@+id/btn_sign_in"
        tools:layout_editor_absoluteX="240dp"
        tools:layout_editor_absoluteY="140dp"


        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/signup"
        android:id="@+id/btn_sign_up"
        android:layout_margin="20dp"
      app:layout_constraintBottom_toBottomOf="parent"


        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="sing in via facebook"
        android:id="@+id/btn_sign_in"
        android:layout_margin="20dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_sign_up"

        />


</androidx.constraintlayout.widget.ConstraintLayout>